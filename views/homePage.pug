extends index

include mixins/uploadForm
include mixins/avatar
block activity
  li
    a(data-toggle="modal" class="login-head" data-target="#exampleModal" data-whatever="@mdo") #{detail}
  +avatar(imgFile)
  li
    a(href="/logout") logout
block form
  +uploadForm()
  link(href="/css/test2.css" rel="stylesheet" type="text/css") 
  

block welcome-greeting
  .container
    .row
      .col-md-12.wow.fadeIn.delay-05s
        .banner-text
          h2
            | Hi #{name}, Nice to have you at &nbsp;
            span erepo
          p
           | you can upload, collaborate 
           br
           | and many more
          .quick-access
            button(class="get-started")
              | Get Started
            button(class="contact-us")
              | Contact Us
block body
  section#about.section-padding.wow.fadeIn.delay-05s
    .container
      h5.explore-head Explore
      .row.intro
        .col-md-4
          a(href="/final-year-projects")
            img(src="/images/final-year.svg" alt="")
          p Final year projects
          p 
            | Click here to explore final year projects
        .col-md-4
          a(href="/research")
            img(src="/images/research.svg" alt="")
          p Research Projects
          p 
            | Explore research projects
        .col-md-4
          a(href="/collaborate")
            img(src="/images/collaborate.svg" alt="")
          p Collaborations
          p 
            | Collaborate with peers!
          