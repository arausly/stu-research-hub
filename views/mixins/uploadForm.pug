mixin uploadForm()
    form(action='/home/file-upload' method="post" role="form" enctype="multipart/form-data")
      #exampleModal.modal.fade(tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
        .modal-dialog(role="document")
          .modal-content
            .modal-header
              h5#exampleModalLabel.modal-title
              button.close(type="button" data-dismiss="modal" aria-label="Close")
                span(aria-hidden="true") Ã—
            .modal-body
              form.body-form
                .form-group
                  label.col-form-label(for="name") Title:
                  input#title.form-control(name="title" type="text" placeholder="Comparative analysis of LTE...")
                .form-group
                  .custom-file   
                    label.custom-file-label(for="newPaper") Paper:
                    input#newPaper.form-control(name="newPaper" type="file")
            .modal-footer
              button#upload.btn.btn-primary(type="submit") upload
    script(type="text/javascript" src="/js/upload.js")